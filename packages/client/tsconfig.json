{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"types": ["vite/client"],
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"paths": {
			"@triplo/common": ["../common/src"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
