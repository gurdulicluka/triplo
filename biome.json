{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": "off",
				"noBlankTarget": "off"
			},
			"style": {
				"noDefaultExport": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": ["packages/client/src"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsoleLog": "info"
					}
				}
			}
		},
		{
			"include": ["packages/server/src"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsoleLog": "info"
					},
					"complexity": {
						"noStaticOnlyClass": "off"
					}
				}
			}
		}
	]
}
